<h1>GScript Index</h1>
<p>Click <%= link_to 'HERE', :action => :init_actions %> to update GScript entries.</p>

<h2>All Actions</h2>
<ul>
  <% Action.all.each do |action| -%>
    <li>
      <%= link_to action.iname,
                  :action => :startup,
                  :gaction => action.iname %>
    </li>
  <% end %>
</ul>

<h2>Ready List</h2>
<ul>
  <% @readies.each do |ready| %>
    <li>
      <%= link_to ready.id, :action => :ready, :ready_id => ready.id %>
    </li><br>
  <% end %>
</ul>

<h2>Actions For Actor</h2>
<% Actor.all.each do |actor| -%>
  <h3><%=h actor.login %> (<%=h actor.categories.map{|c| c.iname}.join(', ') %>)</h3>
  <ul>
    <% actor.actions.each do |action| -%>
      <li>
        <%= link_to action.iname,
                    :action => :startup,
                    :gaction => action.iname %>
      </li>
    <% end %>
  </ul>
<% end -%>
