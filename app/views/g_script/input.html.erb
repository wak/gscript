<b><%= link_to 'Return to Index', :action => :index %></b>
<h1>Please Input!</h1>
<%
   url = if @ready
           gscript_ready_path(:id => @ready)
         else
           gscript_start_path(:gaction => @base[:action])
         end
%>
<% form_tag(url, :multipart => true) do -%>
  <% @action._gs_fields.each do |field| %>
  <%=  field.generate %> <br>
  <%   unless field.errors.empty? -%>
  <%     field.errors.each_value do |m| -%>
           <%= '&nbsp;' * 4 %><i><%=h m %></i><br>
  <%     end %>
  <%   end %>
  <% end %>
  <br>
  <%= submit_tag 'Execute' %>
<% end -%>
